<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="733dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:background="#FFE7C0"
            android:gravity="center"
            android:text="JÃºlia Lanches"
            android:textColor="#684F1E"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox android:id="@+id/checkbox_alface"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:text="Alface - R$0,30"
                android:onClick="onCheckClicked" />

            <CheckBox android:id="@+id/checkbox_presunto"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:text="Presunto - R$0,70"
                android:onClick="onCheckClicked" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox android:id="@+id/checkbox_peru"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:text="Peru - R$1,00"
                android:onClick="onCheckClicked" />

            <CheckBox
                android:id="@+id/checkbox_azeitona"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:onClick="onCheckClicked"
                android:text="Azeitona - R$0,50" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox android:id="@+id/checkbox_tomate"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:text="Tomate - R$0,50"
                android:onClick="onCheckClicked" />

            <CheckBox android:id="@+id/checkbox_queijo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:text="Queijo - R$1,00"
                android:onClick="onCheckClicked" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_ovo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:onClick="onCheckClicked"
                android:text="Ovo - R$0,50" />

            <CheckBox
                android:id="@+id/checkbox_milho"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:onClick="onCheckClicked"
                android:text="Milho - R$0,30" />

        </LinearLayout>
            <CheckBox
                android:id="@+id/checkbox_frango"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:onClick="onCheckClicked"
                android:text="Peito de frango - R$=2,00" />

        <TextView
            android:id="@+id/textViewTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Total: "
            android:hint="" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
